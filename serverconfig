# --- EIS COMPLIANCE CONFIGURATION ---
EIS_DB_CONFIG = {
    "name": "EIS Compliance",
    "db_config": {
        "host": "localhost",
        "user": "root",
        "password": "root123",
        "database": "EIS_n"
